<div class="container" >
  <h1>Create a new author</ h1>
<%= simple_form_for @author do |f| %>
  <%= f.input :name %>
  <%= f.simple_fields_for :books do |book|%>
    <%= render 'book_fields' , f: book %>
    <div class="links">
      <%= link_to_add_association 'add book' , f, :books, partial: 'book_fields' %>
    </div>
  <% end %>
  <%= f.submit %>
  <% end %>
</div>
